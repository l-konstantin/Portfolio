            .works_header-burger
                img.works_header-hamburger(src="assets/images/hamburger.png", alt="hamburger")
        .works_user
            .works_user-stars
                svg.works_user-icons_item(width="470px" height="270px" viewBox="0 0 186.861 110.966")
                    use(xlink:href='assets/styles/sprate.svg#stars')
