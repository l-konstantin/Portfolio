block variables
    - var title = 'Обо мне'

block content
    section.about
        .works_header
            .works_header-icons
                a(href='#')
                    svg.works_header-icons_item(width='32', height='28', viewBox="0 0 548.358 548.358")
                        use(xlink:href='assets/styles/sprate.svg#vk')
                a(href='#')
                    svg.works_header-icons_item(width='27', height='23', viewBox="0 0 475.084 475.084")
                        use(xlink:href='assets/styles/sprate.svg#github')
                a(href='#')
